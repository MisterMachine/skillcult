<h1>Projects</h1>

<% @projects.each do |project| %>
<div class="row">
  <article>
    <header>
      <h1><%= project.title %></h1>
    </header>
    <aside><%= project.intro %></aside>
    <p><%= project.extended %></p>
    <footer>
      <p>Conjured by: <%= project.author %></p>
    </footer>  
  </article>
</div>
<% end %>
<div class="row">
  <%= link_to 'New Project', new_project_path %>
</div>


<!-- projects ember main -->
<script type="text/x-handlebars" data-template-name="index">
  <section id="main">
    {{#each controller}}
     <article>
      <h2>{{title}}</h2>
      <p>{{text}}</p>
    </article>
    {{/each}}
    <nav class="row">
      <%= link_to 'Add New Project', new_project_path %>
    </nav>
  </section>
</script>

<!-- new -->
<script type="text/x-handlebars" data-template-name="new">
  <section id="new">
  <%= form_for :post, url: projects_path do |f| %>
    <fieldset>
      <%= f.label :title %>
      <%= f.text_field :title, { class: 'text' } %>
    </fieldset>
    <fieldset>
      <%= f.label :text %>
      <%= f.text_area :text, { class: 'text' } %>
    </fieldset>
    <fieldset>
      <%= f.submit %>
    </fieldset>
  <% end %>
    <nav class="row">
      <%= link_to 'View Projects', projects_path %>
    </nav>
  </section>
</script>

